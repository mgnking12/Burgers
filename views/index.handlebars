<div class="container-fluid">

  <img src="http://www.dafont.com/forum/attach/orig/5/3/532729.png" class="img-responsive krustPic1">
  <br>

  <div class="middle">
  <div class="menu leftside text-center">
  <br>
  <img src="https://geekoutsw.files.wordpress.com/2015/03/krusty_s_seal_of_approval_by_krnbgn.png?w=640&h=640" class="img-responsive krustPic">
  <br>
  <h2 class="tabTitle">The Menu</h2>
  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <div class="eachBurger">
          <li>
            <br>
            {{this.burger_name}}
            <br>
            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit" class="btn">Table it please!</button>
            </form>

            <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
              <input type="hidden" name="delete" value="true">
              <button type="submit" class="btn">Get the burger outta here!</button>
            </form>
          </li>
        </div>
      {{/unless}}
    {{/each}}
  </ul>
  </div>

  <div class="table rightside text-center">
  <br>
  <h2 class="tabTitle">The Table</h2>
  <br>
  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
        <div class="eachBurger">
        <li>
          <br>
          {{this.burger_name}}
          <br>
          <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
            <button type="submit" class="btn">Menu it please!</button>
          </form>

          <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
            <input type="hidden" name="delete" value="true">
            <button type="submit" class="btn">Get the burger outta here!</button>
          </form>
        </li>
      </div>
      {{/if}}
    {{/each}}
  </ul>
  </div>
  </div>

  <div class="addBurger text-center">
  <br><br>
  <h2>Make a Burger</h2>
  <br>
  <form class="create-update-form" action="burgers/create" method="POST">

    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="burger_name">
    </div>

    <div class="form-group">
      <label for="eat">Where's the burger?</label><br>
      <input type="radio" name="devoured" value="1" checked> On the Table<br>
      <input type="radio" name="devoured" value="0"> On the Menu
    </div>

    <button type="submit">Add Burger</button>
  </form>
  </div>

</div>